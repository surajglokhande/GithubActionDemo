fastlane_version '2.228.0'
default_platform :ios

platform :ios do
  desc "Runs all tests on the project"
  lane :unit_test do
    scan(
      # workspace: "YourProjectName.xcworkspace", # Use .xcworkspace if you have CocoaPods
      # scheme: "YourProjectScheme",
      # *** CHANGE THESE LINES ***
      # Remove 'id' or 'device_id' if you had them
      # Instead, specify a generic device and OS version
      device: "iPhone 15 Pro",  # Or "iPhone SE (3rd generation)", "iPhone 14", etc.
      os_version: "17.4",       # Match a common iOS version available on macos-latest
      # *************************
      clean: true,
      output_directory: "fastlane/test_output",
      output_types: "junit,html"
    )
  end
end
